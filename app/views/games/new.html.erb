<h1>New game</h1>
<p  ><% @letters.each do |letter| %>
      <%= letter %>
    <% end %>
</p>
<form action="/score" method="post">
  <%= hidden_field_tag 'letters', @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="new"> What is the longest word you can find?</label>
  <input type="text" name="score" placeholder="type here">
  <input type="Submit" value ="Play">
</form>

